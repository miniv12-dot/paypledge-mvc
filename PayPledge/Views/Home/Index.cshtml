@{
    ViewData["Title"] = "PayPledge - Where Commitment Meets Accountability";
}

<!-- Hero Section -->
<div class="hero-section bg-primary text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">PayPledge</h1>
                <p class="lead mb-4">Where commitment meets accountability</p>
                <p class="fs-5 mb-4">AI-powered escrow that holds funds until agreed conditions are met. Build trust,
                    automate fulfillment, eliminate intermediaries.</p>
                <div class="d-flex gap-3">
                    <a href="@Url.Action("Register", "Auth")" class="btn btn-light btn-lg px-4">Get Started</a>
                    <a href="#how-it-works" class="btn btn-outline-light btn-lg px-4">Learn More</a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="text-center">
                    <i class="fas fa-shield-alt fa-10x opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Problem Section -->
<div class="container mb-5">
    <div class="row">
        <div class="col-lg-8 mx-auto text-center">
            <h2 class="display-5 mb-4">The Problem</h2>
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                            <h5>Buyer Concerns</h5>
                            <p class="text-muted">Online buyers fear losing money to scammers and fraudulent sellers.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-shipping-fast fa-3x text-info mb-3"></i>
                            <h5>Seller Risks</h5>
                            <p class="text-muted">Sellers risk shipping goods without guaranteed payment.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-cogs fa-3x text-secondary mb-3"></i>
                            <h5>Limited Customization</h5>
                            <p class="text-muted">Existing platforms offer limited customizable transaction terms.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-clock fa-3x text-danger mb-3"></i>
                            <h5>Slow Verification</h5>
                            <p class="text-muted">Manual verification is slow, expensive, and human-dependent.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Solution Section -->
<div class="bg-light py-5 mb-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="display-5 mb-4">The Solution</h2>
                <p class="lead mb-5">PayPledge — Make it Real</p>

                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow">
                            <div class="card-body text-center">
                                <i class="fas fa-layer-group fa-3x text-primary mb-3"></i>
                                <h5 class="text-primary">SIMPLE</h5>
                                <p>One unified platform for both buyers and sellers. AI-powered escrow that holds funds
                                    until agreed conditions are met.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow">
                            <div class="card-body text-center">
                                <i class="fas fa-handshake fa-3x text-success mb-3"></i>
                                <h5 class="text-success">BUILD TRUST</h5>
                                <p>Custom terms & conditions set by both parties before payment. Users upload
                                    verification images/videos; AI scans for authenticity.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow">
                            <div class="card-body text-center">
                                <i class="fas fa-robot fa-3x text-info mb-3"></i>
                                <h5 class="text-info">AUTOMATIC FULFILLMENT</h5>
                                <p>Once all conditions are met, payment is released to the seller. No human
                                    intermediaries — faster, cheaper, scalable.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- How It Works Section -->
<div class="container mb-5" id="how-it-works">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h2 class="display-5 text-center mb-5">How it Works</h2>

            <div class="row g-4">
                <div class="col-md-6">
                    <div class="d-flex">
                        <div class="flex-shrink-0">
                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                                style="width: 50px; height: 50px;">
                                <strong>1</strong>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5>Agree on Terms</h5>
                            <p class="text-muted">Buyer & seller agree on terms (price, delivery proof, quality
                                standards).</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="d-flex">
                        <div class="flex-shrink-0">
                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                                style="width: 50px; height: 50px;">
                                <strong>2</strong>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5>Secure Payment</h5>
                            <p class="text-muted">Buyer deposits payment into PayPledge's secure escrow.</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="d-flex">
                        <div class="flex-shrink-0">
                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                                style="width: 50px; height: 50px;">
                                <strong>3</strong>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5>Upload Proof</h5>
                            <p class="text-muted">Seller uploads proof (product images, delivery receipt, etc.).</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="d-flex">
                        <div class="flex-shrink-0">
                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                                style="width: 50px; height: 50px;">
                                <strong>4</strong>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5>AI Verification</h5>
                            <p class="text-muted">AI verifies compliance with agreed conditions.</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="d-flex">
                        <div class="flex-shrink-0">
                            <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center"
                                style="width: 50px; height: 50px;">
                                <strong>5</strong>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5>Automatic Release</h5>
                            <p class="text-muted">Funds are released automatically if conditions met.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Technology Section -->
<div class="bg-dark text-white py-5 mb-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="display-5 mb-4">Technology</h2>

                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="card bg-transparent border-light h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-mobile-alt fa-3x text-info mb-3"></i>
                                <h5>Cross-Platform Access</h5>
                                <p>Mobile & web for global reach with secure transactions.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card bg-transparent border-light h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-file-contract fa-3x text-warning mb-3"></i>
                                <h5>Smart Contract Logic</h5>
                                <p>Automates condition-based payouts securely.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card bg-transparent border-light h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-shield-alt fa-3x text-success mb-3"></i>
                                <h5>Secure Escrow Gateway</h5>
                                <p>Holds funds safely with enterprise-grade security.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card bg-transparent border-light h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-eye fa-3x text-primary mb-3"></i>
                                <h5>AI/ML Computer Vision</h5>
                                <p>Scans uploaded media for authenticity and compliance.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CTA Section -->
<div class="container text-center mb-5">
    <div class="row">
        <div class="col-lg-6 mx-auto">
            <h2 class="display-6 mb-4">Ensuring Trust and Confidence</h2>
            <p class="lead mb-4">Join thousands of users who trust PayPledge for secure, automated transactions.</p>
            <div class="d-flex gap-3 justify-content-center">
                <a href="@Url.Action("Register", "Auth")" class="btn btn-primary btn-lg px-4">Start Trading Safely</a>
                <a href="@Url.Action("Login", "Auth")" class="btn btn-outline-primary btn-lg px-4">Sign In</a>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .fa-10x {
        font-size: 10em;
    }

    .card {
        transition: transform 0.2s;
    }

    .card:hover {
        transform: translateY(-5px);
    }
</style>

